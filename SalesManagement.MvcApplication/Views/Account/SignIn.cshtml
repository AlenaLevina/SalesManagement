@using SalesManagement.MvcApplication
@model SalesManagement.MvcApplication.ViewModels.Account.SignInViewModel

@{
    ViewBag.Title = GlobalConstants.TitlePrefix + "Sign In";
}

@section MainContent{
    <h2>Sign In</h2>
    
    @using (Html.BeginForm())
    {
        <div class="separate">
            @Html.LabelFor(m => m.Login)<br/>
            @Html.TextBoxFor(m => m.Login)
            @Html.ValidationMessageFor(m => m.Login)
        </div>
        <div class="separate">
            @Html.LabelFor(m => m.Password)<br/>
            @Html.PasswordFor(m => m.Password)
            @Html.ValidationMessageFor(m => m.Password)
        </div>

        <div class="separate">
            <button type="submit" title="Register">Sign In</button>
        </div>
    }
}