@model SalesManagement.MvcApplication.ViewModels.Product.CharacteristicValuesViewModel

@for (int i = 0; i < Model.CharacteristicValues.Count(); i++)
{
    <div class="separate">
        @Html.Label(Model.CharacteristicValues[i].CharacteristicName, Model.CharacteristicValues[i].CharacteristicName)<br />
        @Html.TextBoxFor(m => m.CharacteristicValues[i].Value)
        @Html.HiddenFor(m => m.CharacteristicValues[i].CharacteristicId)
        @Html.HiddenFor(m => m.CharacteristicValues[i].CharacteristicName)
        @Html.HiddenFor(m => m.CharacteristicValues[i].Id)
    </div>
}