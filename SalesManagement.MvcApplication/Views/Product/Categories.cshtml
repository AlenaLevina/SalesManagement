@using SalesManagement.MvcApplication
@model SalesManagement.MvcApplication.ViewModels.Product.CategoriesViewModel

@{
    
    ViewBag.Title = GlobalConstants.TitlePrefix + "Categories";
}

@section Head
{
    <link rel="stylesheet" type="text/css" href="~/Content/Stylesheets/_Shared/_EntityList.css"/>
}

@section MainContent{
    <h2>
        Categories
    </h2>
    @foreach (var category in Model.Categories)
    {
        <div class="entityListItem">
            <div class="name"><h4 ><span>@category.Name</span></h4></div>
            <div class="entityActionLinks">
                <a class="entityActionLink" href="@Url.Action("EditCategory","Product",new {id=category.Id})">
                    <img class="entityActionLink" src="~/Content/Images/edit.png" alt="Edit" title="Edit"/>
                </a>
                <a class="entityActionLink" href="@Url.Action("DeleteCategory","Product",new {id=category.Id})">
                    <img class="entityActionLink" src="~/Content/Images/delete.png" alt="Del" title="Delete"/>
                </a>
            </div>
        </div>
    }
}